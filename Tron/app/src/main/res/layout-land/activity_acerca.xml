<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_acerca"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:ignore="UselessParent"
        android:layout_alignParentTop="true">

        <ImageView
            android:layout_width="243dp"
            android:layout_height="243dp"
            app:srcCompat="@mipmap/logo"
            android:id="@+id/imageView11"
            android:contentDescription=""
            tools:ignore="ContentDescription" />

        <TextView
            android:text="@string/mauricio_lvarez_varela"
            android:layout_width="260dp"
            android:layout_height="wrap_content"
            android:id="@+id/textView2"
            android:layout_marginTop="80dp"
            android:layout_marginLeft="340dp"
            tools:ignore="RtlHardcoded"
            android:textStyle="normal|bold"
            android:textColor="@android:color/black" />

        <TextView
            android:text="Alejandro Calvo Porras"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView4"
            android:layout_marginTop="100dp"
            android:layout_marginLeft="340dp"
            tools:ignore="HardcodedText,RtlHardcoded"
            android:textStyle="normal|bold"
            android:textColor="@android:color/black" />

        <TextView
            android:text="Andres Campos Castro"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView6"
            android:layout_marginTop="120dp"
            android:layout_marginLeft="340dp"
            tools:ignore="HardcodedText,RtlHardcoded"
            android:textStyle="normal|bold"
            android:textColor="@android:color/black" />

        <TextView
            android:text="Roberto Gutiérrez Sánchez"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView5"
            android:layout_marginTop="140dp"
            android:layout_marginLeft="340dp"
            tools:ignore="HardcodedText,RtlHardcoded"
            android:textStyle="normal|bold"
            android:textColor="@android:color/black" />

        <TextView
            android:text="@string/ingenier_a_en_computadores"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView7"
            android:layout_marginTop="180dp"
            android:layout_marginLeft="340dp"
            tools:ignore="RtlHardcoded"
            android:textStyle="normal|bold"
            android:textColor="@android:color/black" />

        <TextView
            android:text="Instituto Tecnologico de Costa Rica"
            android:layout_width="245dp"
            android:layout_height="wrap_content"
            android:id="@+id/textView"
            android:layout_marginTop="50dp"
            android:layout_marginLeft="310dp"
            tools:ignore="HardcodedText,RtlHardcoded"
            android:textStyle="normal|bold"
            android:textSize="14sp"
            android:textColor="@android:color/black" />

    </FrameLayout>

</RelativeLayout>
