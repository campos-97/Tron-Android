<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:ignore="ExtraText">

    //LAYOUT DEL OPEN GL
    <LinearLayout
        android:id="@+id/openGLLayout"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:ignore="UselessLeaf,UselessParent">

    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <Button
            android:layout_width="65dip"
            android:layout_height="65dip"
            android:id="@+id/button6"
            android:layout_marginBottom="11dp"
            tools:ignore="HardcodedText"
            android:background="@drawable/zoom_in"
            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/relative_layout1">

        <Button
            android:layout_width="65dip"
            android:layout_height="65dip"
            android:id="@+id/button1"
            android:background="@drawable/cambio"
            tools:ignore="HardcodedText,RtlHardcoded"
            android:layout_marginTop="425dp"
            android:layout_marginLeft="10dp" />
    </RelativeLayout>

    <TextView
        android:id="@+id/badge1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignRight="@+id/relative_layout1"
        android:background="@drawable/item_count"
        android:textColor="#FFF"
        android:textSize="16sp"
        android:textStyle="bold"
        tools:ignore="HardcodedText,RtlHardcoded"
        android:layout_marginRight="0dp"
        android:layout_marginTop="425dp" />

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/relative_layout2">

        <Button
            android:layout_width="65dip"
            android:layout_height="65dip"
            android:id="@+id/button2"
            android:background="@drawable/chose"
            tools:ignore="HardcodedText,RtlHardcoded"
            android:layout_marginTop="350dp"
            android:layout_marginLeft="10dp" />
    </RelativeLayout>

    <TextView
        android:id="@+id/badge2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignRight="@+id/relative_layout1"
        android:background="@drawable/item_count"
        android:textColor="#FFF"
        android:textSize="16sp"
        android:textStyle="bold"
        tools:ignore="HardcodedText,RtlHardcoded"
        android:layout_marginTop="350dp"
        android:focusable="false" />

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:layout_width="66dp"
            android:layout_height="66dp"
            android:id="@+id/FirstPowerUp"
            android:layout_gravity="right|top"
            android:background="@drawable/empty"
            android:layout_marginRight="25dp"
            android:layout_marginTop="25dp" />

        <ImageView
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:id="@+id/ThirdPowerUp"
            android:layout_gravity="right|center_vertical"
            android:background="@drawable/empty"
            android:layout_marginRight="-5dp"
            android:layout_marginTop="-100dp" />

        <ImageView
            android:layout_width="57dp"
            android:layout_height="57dp"
            android:id="@+id/SecondPowerUp"
            android:layout_gravity="right|top"
            android:background="@drawable/empty"
            android:layout_marginRight="-10dp"
            android:layout_marginTop="80dp"
            android:adjustViewBounds="false" />

    </FrameLayout>

    //LAYOUT DEL HUD

</RelativeLayout>
